model CancelTrip {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cancel_at DateTime @default(now())
  trip_id   String   @unique @db.ObjectId
  driver_id String   @db.ObjectId
  reason    String

  trip   Trip @relation(fields: [trip_id], references: [id], onDelete: Cascade)
  driver User @relation(fields: [driver_id], references: [id], onDelete: Cascade)

  @@map("cancelTrips")
}
