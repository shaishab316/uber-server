model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  role     EUserRole @default(USER)
  email    String?
  phone    String?
  password String

  avatar String @default("/images/placeholder.png")
  name   String @default("Unknown")

  nid_number     String?
  payment_method String?
  driver_info    TDriverInfo?

  is_verified       Boolean @default(false)
  is_active         Boolean @default(false)
  is_admin          Boolean @default(false)
  is_pending_driver Boolean @default(false)

  otp            String?
  otp_expires_at DateTime?

  location          TLocation?
  trips_received    Trip[]            @relation("Passenger")
  trips_given       Trip[]            @relation("Driver")
  available_drivers AvailableDriver[]

  @@map("users")
}

enum EUserRole {
  USER
  DRIVER
}

type TDriverInfo {
  business_contact String
  driver_license   String
  car_photo        String
  car_name         String
}

type TLocation {
  type    String  @default("Point")
  geo     Float[]
  address String?
}
