model Chat {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at      DateTime @default(now())
  driver_id       String   @db.ObjectId
  user_id         String   @db.ObjectId
  last_message_id String?  @db.ObjectId

  driver       User     @relation("DriverChat", fields: [driver_id], references: [id], onDelete: Cascade)
  user         User     @relation("UserChat", fields: [user_id], references: [id], onDelete: Cascade)
  last_message Message? @relation(fields: [last_message_id], references: [id], onDelete: Cascade)

  @@map("chats")
}
